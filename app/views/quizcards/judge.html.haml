#{provide :title, '解答'}
#{provide :button_text, '次へ'}
%div.row
  %div.col-md-8.col-md-offset-2

    %div.row.border.grayback
      %div.col-md-2
        %h2 問題：
      %div.col-md-10
        %h1 #{@quizcard.description}
    %div.row.border.grayback
      %div.col-md-2
        %h2 正解：
      %div.col-md-10
        %h1 #{@quizcard.name}
    %div.row.border
      %div.col-md-2
        %h2 解答：
      %div.col-md-10
        %h1 #{@answer}
    %div.row
      %div.col-md-12
        %h2 解答時間： #{@answer_time} 秒
    %div.row
      %div.col-md-12
        %h2 次回： #{@quizcard.appearing_at.to_date if !@quizcard.appearing_at.nil?}
    = link_to "#{yield(:button_text)}", practice_path, id: 'next_btn', class: 'btn btn-default'
