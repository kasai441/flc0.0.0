#{provide :title, '問題'}
#{provide :button_text, '解答'}
%h1 問題
%div.row
  %div.col-md-8.col-md-offset-2
    %h1 #{@quizcard.description}
    = form_for @quizcard, url: judge_path, method: :post do |f|
      = f.hidden_field :card_id, :value => @quizcard.id
      = f.hidden_field :begin_answer, :value => @begin_answer
      = f.label :name, "答え"
      = f.text_field :name, value: "", autofocus: true, placeholder: hint(@quizcard.name), class: 'form-control'
      = f.submit "#{yield(:button_text)}", id: 'btn btn-primary'
