<div class="row">
  <% if @user.present? && @user.quizcards.any? %>
    <span class="border">
      <h1>＜今日の練習：残り（<%= @quizcards_today.count %>）＞</h1>
      <% session[:hint] = "on" %>
      <%= will_paginate @quizcards_today %>
      <ol class="quizcards">
        <%= render @quizcards_today %>
      </ol>
      <%= will_paginate @quizcards_today %>
      <% session[:hint] = nil %>
    </span>
  <% end %>
  <% if cookies[:quizcards_right_ids] %>
    <span class="border">
      <h1>＜今日の正解（<%= @quizcards_right.count %>）＞</h1>
      <%= will_paginate @quizcards_right %>
      <ol class="quizcards">
        <%= render @quizcards_right %>
      </ol>
      <%= will_paginate @quizcards_right %>
    </span>
  <% end %>
  <%if cookies[:quizcards_wrong_ids] %>
    <span class="border">
      <h1>＜今日の不正解（<%= @quizcards_wrong.count %>）＞</h1>
      <%= will_paginate @quizcards_wrong %>
      <ol class="quizcards">
        <%= render @quizcards_wrong %>
      </ol>
      <%= will_paginate @quizcards_wrong %>
    </span>
  <% end %>
</div>
